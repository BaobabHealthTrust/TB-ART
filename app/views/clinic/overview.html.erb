<%= render :partial => 'clinic/nav', :locals => {:active => 'overview'} %>
<script type="text/javascript">
  jQuery(document).ready(function($) {
  }) 
</script>
<style type="text/css">
  #stats {
    width:760px;
    border:1px solid black;
    margin:10px;    
    background:white;
  } 
  #stats td, #stats th {
    text-align:center;
  }
</style>
<div id="tab">
  <div class="panel">
    <h2>Current Patient Statistics</h2>
    <table id="stats">
      <tr>
        <th style="text-align:left;">Encounter Type</th>
        <th>Me</th>
        <th>Today</th>
        <th>This Year</th>
        <th>Total to Date</th>
      </tr>
      <% @types.each do |type| %>
        <tr class="<%= cycle('even', 'odd') %>">
          <td style="text-align:left;"><%= type %></td>
          <td><%= @me[type] %></td>
          <td><%= @today[type] %></td>
          <td><%= @year[type] %></td>
          <td><%= @ever[type] %></td>
        </tr>
      <% end %>        
    </table>
  </div>        
</div>