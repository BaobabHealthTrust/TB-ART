</head>
<div id="header">
<h1>Drug management</h1>
</div><br/>
  <div id='main'>
    <div id="left">
      <table id="summary">
        <tr>
          <th>Drug</th>
          <th>Current stock</th>
          <th>Dispensed</th>
          <!--th>Consumed (%)</th-->
        </tr>
        <% @stock.each do |name,value| %>
        <tr>
          <td><%= name %></a></td>
          <td><%= value['current_stock'] %></a></td>
          <td><%= value['dispensed'] %></a></td>
          <!--td><%#= value['consumption_per'] %></a></td-->
        </tr>
        <%end%>
      </table>
    </div>
    <div id="right">
      <table id="activity_buttons">
        <% @activities.each do |name,path| %>
        <tr>
          <!-- <td><a href="<%=path%>" class='report_buttons'><%=name%></a></td> -->
          <td><button class='blue' onclick="parent.location='<%=path%>'" style='margin: 5px,0px,0px; min-width: 250px'><span> <%=name%> </span></button></td>
        </tr>
        <%end%>
      </table>
    </div>
</div>
